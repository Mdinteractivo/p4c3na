<?xml version="1.0" encoding="UTF-8" ?>

<widget xmlns = "http://www.w3.org/ns/widgets"
	xmlns:gap = "http://phonegap.com/ns/1.0"
	id        = "com.phonegap.example"
	versionCode="10" 
	version   = "1.0.0">

	<name>Paceña</name>
	
	<description>
		Paceña Aplicacion 
	</description>
	
	<author href="https://build.phonegap.com" email="support@phonegap.com">
		Martin Luz
	</author>
	
	<!-- PREFERENCIAS DE PLATAFORMA -->

	<gap:platform name="ios" />
	<gap:platform name="android" />
	
	<!-- Preferences -->
	<preference name="phonegap-version" value="3.0.0" />
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="true" />
	
	<!-- Icons -->
	<icon src="img/app-icons/app-icon.png"  gap:platform="android" gap:density="ldpi" />
	<icon src="img/app-icons/app-icons-hover.png" gap:platform="android" gap:state="hover"/>
	
	<!-- Android -->
	<preference name="android-installLocation" value="auto" /> <!-- internalOnly, auto, preferExternal -->
		<!-- Splash -->
	<gap:splash src="img/app-icons/splash.png" gap:platform="android" />
	
	<!-- Plugins -->
	<gap:plugin name="org.apache.cordova.device" />
	<gap:plugin name="org.apache.cordova.battery-status" />
	<gap:plugin name="org.apache.cordova.splashscreen" />
	<gap:plugin name="org.apache.cordova.network-information" />
	
</widget>